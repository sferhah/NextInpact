<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NextInpact.Views.ArticleDetailPage"
             Title="{Binding Title}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Icon="ic_menu_start_conversation.png" Clicked="ToolbarItem_Clicked" />
    </ContentPage.ToolbarItems>
    <WebView VerticalOptions="FillAndExpand">
        <WebView.Source>
            <HtmlWebViewSource Html="{Binding Item.Content}"/>
        </WebView.Source>
    </WebView>
</ContentPage>